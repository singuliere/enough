---
# https://docs.openstack.org/python-openstackclient/latest/configuration/index.html#configuration-files
clouds:
  ovh:
    auth:
      auth_url: "https://auth.cloud.ovh.net/v2.0/" # OS_AUTH_URL
      project_name: "XXXXXX" # OS_TENANT_NAME
      username: "XXXXXX" # OS_USERNAME
      password: "XXXXXX" # OS_PASSWORD
    region_name: "XXXXXX" # OS_REGION_NAME
#
# By default the OpenStack inventory will use UUIDs but we
# prefer to use hostnames
# https://github.com/openstack-infra/shade/blob/master/shade/inventory.py#L36
# https://raw.githubusercontent.com/ansible/ansible/devel/contrib/inventory/openstack.py
#
ansible:
  use_hostnames: True
