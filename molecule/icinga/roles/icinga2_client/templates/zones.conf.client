/* Node setup */

object Endpoint NodeName {
}

object Zone ZoneName {
	endpoints = [ NodeName ]
	parent = "master"
}

/* Global zone */

object Zone "global-templates" {
  global = true
}

/* Master zone */
 
object Zone "master" {
  endpoints = [ "{{ monitoring_master }}" ]
}
 
object Endpoint "{{ monitoring_master }}" {
  host = "{{ hostvars[monitoring_master]['ansible_host'] }}"
}
