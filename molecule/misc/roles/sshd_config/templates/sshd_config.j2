# Ansible managed.

Port {{ ansible_port }}

# Based on Debian default settings

PermitRootLogin no
ChallengeResponseAuthentication no
UsePAM yes
X11Forwarding no
PrintMotd no

# Specific securedrop.club settings

AcceptEnv LANG LC_* GIT_AUTHOR_NAME GIT_AUTHOR_EMAIL
HostKeyAlgorithms ssh-ed25519,ssh-rsa
